<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
	</tr>

	<% @products.each do |p| %>
	<tr>
		<td> <%= p.name %></td>
		<td> <%= p.description %></td>
		<td> <%= p.price %> </td>
		<td> <%=link_to "edit",edit_product_path(p) %></td>
		<td> <%=link_to "show",product_path(p) %> </td>
		<td> <%=link_to "delete",product_path(p), method: :delete %> </td>
	</tr>
	<% end %>
</table>